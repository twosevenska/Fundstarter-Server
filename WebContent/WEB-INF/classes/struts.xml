<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
		"-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
		"http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>
	<constant name="struts.action.excludePattern" value="/ws"/>
	<constant name="struts.devMode" value="false" />

	<package name="basicstruts2" extends="struts-default">

        <!-- If no class attribute is specified the framework will assume success and 
        render the result index.jsp -->
        <!-- If no name value for the result node is specified the success value is the default -->
		<action name="index">
			<result>/index.jsp</result>
		</action>
		
		<!-- If the URL is hello.action the call the execute method of class HelloWorldAction.
		If the result returned by the execute method is success render the HelloWorld.jsp -->
		<action name="hello" class="fundstarterWebServer.action.HelloWorldAction" method="execute">
			<result name="success">/HelloWorld.jsp</result>
		</action>
		
		<action name="user">
			<result>logged/user.jsp</result>
		</action>
		
		<action name="create-project">
			<result>logged/create.jsp</result>
		</action>
		
		<action name="reward">
			<result>logged/reward.jsp</result>
		</action>
		
		<action name="welcome">
			<result>welcome.jsp</result>
        </action>
		
		<action name="login" class="fundstarterWebServer.action.Login"
                method="login">
            <result name="success">logged/index.jsp</result>
            <result name="input">index.jsp</result>
        </action>
		
		<action name="logout" class="fundstarterWebServer.action.Login"
                method="logout">
            <result name="success">index.jsp</result>
        </action>
		
		<action name="create">
			<result>create.jsp</result>
		</action>
		
		<action name="register" class="fundstarterWebServer.action.Register">
            <result name="success">index.jsp</result>
            <result name="error">create.jsp</result>
        </action>
		
		<action name="forum">
			<result>/forum.jsp</result>
		</action>
		
	</package>

</struts>