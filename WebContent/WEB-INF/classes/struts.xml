<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
		"-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
		"http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>
	<constant name="struts.action.excludePattern" value="/ws"/>
	<constant name="struts.devMode" value="false" />

	<package name="basicstruts2" extends="struts-default">

        <!-- If no class attribute is specified the framework will assume success and 
        render the result index.jsp -->
        <!-- If no name value for the result node is specified the success value is the default -->
		<action name="index">
			<result>index.jsp</result>
		</action>
		
		<action name="loginUser">
			<result>loginUser.jsp</result>
        </action>
        
       	<action name="projectPage">
			<result>projectPage.jsp</result>
        </action>
        
        <action name="register" class="fundstarterWebServer.action.Register">
            <result name="success">index.jsp</result>
            <result name="error">create.jsp</result>
        </action>
		
		<action name="logout" class="fundstarterWebServer.action.Login"
                method="logout">
            <result name="success">index.jsp</result>
        </action>
        
        <action name="forum">
			<result>/forum.jsp</result>
		</action>
		
		<action name="login" class="fundstarterWebServer.action.Login"
                method="login">
            <result name="success">logged/index.jsp</result>
            <result name="input">index.jsp</result>
        </action>
		
		<action name="user" class="fundstarterWebServer.action.UserPanel"
                method="checkPrivilege">
            <result name="success">logged/user.jsp</result>
            <result name="input">index.jsp</result>
		</action>
	
		<action name="createProjectPage" class="fundstarterWebServer.action.CreateProjectPage">
			<result name="success">logged/create.jsp</result>
            <result name="input">index.jsp</result>
		</action>
		
		<action name="projectCreation" class="fundstarterWebServer.action.CreateProject">
			<result name="success">logged/user.jsp</result>
            <result name="input">logged/index.jsp</result>
		</action>
		

	</package>

</struts>